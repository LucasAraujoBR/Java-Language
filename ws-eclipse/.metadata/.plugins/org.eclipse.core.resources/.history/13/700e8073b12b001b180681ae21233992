import java.util.Locale;
import java.util.Scanner;

public class _6Q {
	/*
	 * Fazer um programa que leia três valores com ponto flutuante de dupla
	 * precisão: A, B e C. Em seguida, calcule e mostre: a) a área do triângulo
	 * retângulo que tem A por base e C por altura. b) a área do círculo de raio C.
	 * (pi = 3.14159) c) a área do trapézio que tem A e B por bases e C por altura.
	 * d) a área do quadrado que tem lado B. e) a área do retângulo que tem lado A
	 * e altura B.
	 */
	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		double A,B,C;
		System.out.println("Digite 3 valores: ");
		A = sc.nextDouble();
		B = sc.nextDouble();
		C = sc.nextDouble();
		System.out.println("TRIANGULO: %.3f " , ((A*C)/2));
		System.out.println("CIRCULO: %.3f" , (3.14159*Math.pow(C, 2)));
		System.out.println("TRAPEZIO: %.3f" , (((A+B)*C)/2));
		System.out.println("QUADRADO: %.3f" , (Math.pow(B, 2)));
		System.out.println("RETANGULO: %.3f" , (A*B));
	
	
	
	}

}
